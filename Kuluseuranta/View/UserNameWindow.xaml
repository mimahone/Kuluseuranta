<Window x:Class="Kuluseuranta.View.UserNameWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Kuluseuranta.View"
        xmlns:resx="clr-namespace:Kuluseuranta.Localization"
        mc:Ignorable="d"
        Title="{x:Static resx:Language.SettingUserName}" Height="200" Width="250" WindowStartupLocation="CenterScreen" ResizeMode="NoResize" WindowStyle="ToolWindow">
    <Grid>
        <StackPanel Margin="10">

            <!--User Name-->
            <TextBlock Text="{x:Static resx:Language.UserID}" Margin="0,5" FontSize="20" />
            <TextBox Name="tbUserName" Margin="0,5" FontSize="20" />

            <!--Set UserName Button-->
            <Button Content="{x:Static resx:Language.SetUserName}" Name="btnSetUserName" Margin="0,15,0,0" FontSize="20" IsDefault="True" Click="btnSetUserName_Click" />

        </StackPanel>
    </Grid>
</Window>
